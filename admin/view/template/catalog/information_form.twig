        html += '<div class="form-group">';
        html += '<label class="col-sm-2 control-label">{{ text_description }}</label>';
        html += '<div class="col-sm-10">';
        html += '<textarea name="information_triggers[' + language + '][' + count + '][description]" class="form-control summernote" placeholder="{{ text_description }}"></textarea>';
        html += '</div>';
        html += '</div>';
        html += '</div>';
        html += '<div class="col-sm-1">';
        html += '<button type="button" onclick="$(\'#trigger_block_' + count +'_'+ language + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>';
        html += '</div>';
        html += '</div>';
        html += '</div>';
        html += '<hr>';

        $('#trigger-block-'+ language).append(html);
        $('.summernote').summernote({height: 150});
        return true;
    }
</script>
