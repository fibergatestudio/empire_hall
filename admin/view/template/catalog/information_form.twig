<script>
    {% for language in languages %}
        $(document).on('click', '#add-triggers-{{ language.language_id }}', function(){
            var language  = $(this).attr('data-language');
            var count     = $(this).attr('data-count');
            addTrigger(count,language);
        });
    {% endfor %}

    function addTrigger(count,language) {

        if (!count) {
            count = 1;
        } else {
            count++;
            $('#add-triggers-' + language).attr('data-count', count);
        }

        html = '';
        html += '<div id="trigger_block_'+ count +'_'+ language +'"';
        html += '<div class="row">';
        html += '<div class="col-sm-11">';
        html += '<div class="form-group">';
        html += '<label class="col-sm-2 control-label">{{ text_title }}</label>';
        html += '<div class="col-sm-10">';
        html += '<input type="text" name="information_triggers[' + language + '][' + count + '][title]" placeholder="{{ text_title }}" class="form-control"/>';
        html += '</div>';
        html += '</div>';
        html += '<div class="form-group">';
        html += '<label class="col-sm-2 control-label" for="input-trigger-image">{{ text_image }}</label>';
        html += '<div class="col-sm-10">';
        html += '<a href="" id="thumb-trigger-image-'+language+'-'+count+'" data-toggle="image" class="img-thumbnail">';
        html += '<img src="{{ placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>';
        html += '<input type="hidden" name="information_triggers[' + language + '][' + count + '][image]" value="" id="input-trigger-image-'+language+'-'+count+'" />';
        html += '</div>';
        html += '</div>';
        html += '<div class="form-group">';
        html += '<label class="col-sm-2 control-label">{{ text_width_height }}</label>';
        html += '<div class="col-sm-10">';
        html += '<div class="col-sm-3"><input type="text" name="information_triggers[' + language + '][' + count + '][image_width]" placeholder="{{ text_width }}" class="form-control"/></div><div class="col-sm-3"><input type="text" name="information_triggers[' + language + '][' + count + '][image_height]" placeholder="{{ text_height }}" class="form-control"/></div>';
        html += '</div>';
