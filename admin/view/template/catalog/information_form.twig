            <div class="tab-pane" id="tab-cover">
                <div class="table-responsive">
                <table id="images-cover" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">Изображение</td>
                      <td class="text-left">Заголовок</td>
                      <td class="text-right">Сортировка</td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>
                    {{ image_row }}
					{% set image_row = 0 %}
					{% for image in cover_image %}
						<tr id="image-row-cover{{ image_row }}">
						  <td class="text-left"><a href="" id="thumb-image-cover{{ image_row }}" data-toggle="image" class="img-thumbnail"><img src="{{ image.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
							<input type="hidden" name="cover_image[{{ image_row }}][image]" value="{{ image.image }}" id="input-image-cover{{ image_row }}" /></td>
						  <td class="text-left">
							{% for language in languages %}
								<div class="input-group">
									<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
									<input type="text" name="cover_image[{{ image_row }}][title][{{ language.language_id }}]" value="{{ image.title[language.language_id] }}" placeholder="Название" class="form-control" />
								</div>
							{% endfor %}
						  </td>
						  <td class="text-right"><input type="text" name="cover_image[{{ image_row }}][sort_order]" value="{{ image.sort_order }}" placeholder="Порядок сортировки" class="form-control" /></td>
						  <td class="text-left"><button type="button" onclick="$('#image-row-cover{{ image_row }}').remove();" data-toggle="tooltip" title="Удалить" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
						</tr>
                    {% set image_row = image_row + 1 %}
                    {% endfor %}	
                  </tbody>
                  <tfoot>
                    <tr>
                      <td colspan="3"></td>
                      <td class="text-left"><button type="button" onclick="addImageCover();" data-toggle="tooltip" title="Добавить изображение" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>  			
			
			
			
            <div class="tab-pane" id="tab-seo">
              <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_keyword }}</div>
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">{{ entry_store }}</td>
                      <td class="text-left">{{ entry_keyword }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  {% for store in stores %}
                  <tr>
                    <td class="text-left">{{ store.name }}</td>
                    <td class="text-left">{% for language in languages %}
                      <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                        <input type="text" name="information_seo_url[{{ store.store_id }}][{{ language.language_id }}]" value="{% if information_seo_url[store.store_id][language.language_id] %}{{ information_seo_url[store.store_id][language.language_id] }}{% endif %}" placeholder="{{ entry_keyword }}" class="form-control" />
                      </div>
                      {% if error_keyword[store.store_id][language.language_id] %}
                      <div class="text-danger">{{ error_keyword[store.store_id][language.language_id] }}</div>
                      {% endif %} 
                      {% endfor %}</td>
                  </tr>
                  {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
              <div class="tab-pane" id="tab-triggers">
                  <ul class="nav nav-tabs" id="language_triggers">
                      {% for language in languages %}
                          <li><a href="#language_triggers{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                      {% endfor %}
                  </ul>
                  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_triggers }}</div>
                      <div class="tab-content">
                          {% for language in languages %}
                              <div class="tab-pane" id="language_triggers{{ language.language_id }}">
                                  <div class="page-header clearfix">
                                      <div class="pull-right">
                                          <button type="button" id="add-triggers-{{ language.language_id }}" data-count="{% if information_triggers[language.language_id] %}{{ information_triggers[language.language_id]|length }}{% else %}0{% endif %}" data-language="{{ language.language_id }}" data-toggle="tooltip" title="{{ text_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></button>
                                      </div>
                                  </div>
                                  {% set count = 1 %}
                                  {% for language_id, information_trigger in information_triggers %}
                                    {% for trigger in information_trigger %}
                                        {% if language_id == language.language_id %}
                                              <div id="trigger_block_{{ count }}_{{ language_id }}">
                                                  <div class="row">
                                                      <div class="col-sm-11">
                                                          <div class="form-group">
                                                              <label class="col-sm-2 control-label" for="input-trigger-title">{{ text_title }}</label>
                                                              <div class="col-sm-10">
                                                                  <input type="text" name="information_triggers[{{ language_id }}][{{ count }}][title]" value="{{ trigger['title'] }}" placeholder="{{ text_title }}" class="form-control"/>
                                                              </div>
                                                          </div>
                                                          <div class="form-group">
                                                              <label class="col-sm-2 control-label" for="input-trigger-image">{{ text_image }}</label>
                                                              <div class="col-sm-10">
                                                                  <a href="" id="thumb-trigger-image-{{ language_id }}-{{ count }}" data-toggle="image" class="img-thumbnail">
                                                                      <img src="{{ trigger['thumb'] }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                                                                  <input type="hidden" name="information_triggers[{{ language_id }}][{{ count }}][image]" value="{{ trigger['image'] }}" id="input-trigger-image-{{ language_id }}-{{ count }}" />
                                                              </div>
                                                          </div>
                                                          <div class="form-group">
                                                              <label class="col-sm-2 control-label" for="input-trigger-width-height">{{ text_width_height }}</label>
                                                              <div class="col-sm-10">
                                                                  <div class="col-sm-3"><input type="text" name="information_triggers[{{ language_id }}][{{ count }}][image_width]" value="{{ trigger['image_width'] }}" placeholder="{{ text_width }}" class="form-control"/></div>
                                                                  <div class="col-sm-3"><input type="text" name="information_triggers[{{ language_id }}][{{ count }}][image_height]" value="{{ trigger['image_height'] }}" placeholder="{{ text_height }}" class="form-control"/></div>
                                                              </div>
                                                          </div>
                                                          <div class="form-group">
                                                              <label class="col-sm-2 control-label" for="input-trigger-description{{ language_id }}">{{ text_description }}</label>
                                                              <div class="col-sm-10">
                                                                  <textarea name="information_triggers[{{ language_id }}][{{ count }}][description]" class="form-control summernote" placeholder="{{ text_description }}" data-toggle="summernote" data-lang="{{ summernote }}">{{ trigger['description'] }}</textarea>
                                                              </div>
                                                          </div>
                                                      </div>
                                                      <div class="col-sm-1 text-right">
                                                          <button type="button" onclick="$('#trigger_block_{{ count }}_{{ language_id }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
                                                      </div>
                                                  </div>
                                              </div>
                                              <hr>
                                            {% set count = count + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                  {% endfor %}
                                  <div id="trigger-block-{{ language.language_id }}"></div>
                              </div>
                          {% endfor %}
                      </div>
                  </div>
            <div class="tab-pane" id="tab-design">
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">{{ entry_store }}</td>
                      <td class="text-left">{{ entry_layout }}</td>
                    </tr>
                  </thead>
                  <tbody>
                  
                  {% for store in stores %}
                  <tr>
                    <td class="text-left">{{ store.name }}</td>
                    <td class="text-left"><select name="information_layout[{{ store.store_id }}]" class="form-control">
                        <option value=""></option>
                        {% for layout in layouts %}
                        {% if information_layout[store.store_id] and information_layout[store.store_id] == layout.layout_id %}
                        <option value="{{ layout.layout_id }}" selected="selected">{{ layout.name }}</option>
                        {% else %}
                        <option value="{{ layout.layout_id }}">{{ layout.name }}</option>
                        {% endif %}
                        {% endfor %}
                      </select></td>
                  </tr>
                  {% endfor %}
                    </tbody>
                  
                </table>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
