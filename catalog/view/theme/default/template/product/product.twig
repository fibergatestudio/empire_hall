{% if products %}
    <div class="collection-products">
        <div class="collection-products__title">{{ text_related }}</div>
        <div class="collection-products__list">
            {% for product in products %}
                <div class="product__item">
                <div class="product__title">
                    <a href="{{ product.href }}">{{ product.name }}</a>
                    <ol class="breadcrumb brand-breadcrumb">
                        {% if  product.manufacturer_href %}
                            <li>
                                <a href="{{ product.manufacturer_href }}"><span>{{ product.manufacturer }}</span></a>
                            </li>
                        {% endif %}
                        {% if product.collection %}
                            <li>
                                <a href="{{ product.collection_href }}"><span>{{ product.collection }}</span></a>
                            </li>
                        {% endif %}
                    </ol>
                </div>
                <div class="product__image">
                    <a href="{{ product.href }}">
                        <img decoding="async" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAADsQAAA7EAZUrDhsAAAANSURBVBhXYzh8+PB/AAffA0nNPuCLAAAAAElFTkSuQmCC" data-src="{{ product.thumb }}" width="370" height="370" alt="{{ product.name }}" class="lazyload">
                    </a>
                </div>
                <div class="product__box">
                    <div class="product__price">
                        {% if product.price > 0 %}
                            {% if product.special %}
                                <div class="product__price-old">{{ product.price }}</div>
                                <div class="product__price-new">{{ product.special }}</div>
                            {% else %}
                                <div class="product__price-new">{{ product.price }}</div>
                            {% endif %}
                        {% else %}
                            <div class="product__no-price-btm" onclick="location.href='{{ product.href }}'">{{ text_no_price }}</div>
                        {% endif %}
                    </div> <span class="product-nav">
                    <span class="product__link link-favorite loginza" onclick="wishlist.add('{{ product.product_id }}');">
                  <svg>
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/front/dist/images/sprite.svg#wishlist"></use>
                  </svg>
                </span>
                    <a class="product__link" href="{{ product.href }}">
                        <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="front/dist/images/sprite.svg#link-arrow"></use></svg>
                    </a></span>
                </div>
            </div>
            {% endfor %}
        </div>
        <a href="{{ combination_link }}" class="show-all">{{ text_all_combinations }}</a>
    </div>
{% endif %}

<script>
    $('#button-cart').on('click', function(event){
        event.preventDefault();
        $.ajax({
            url: 'index.php?route=checkout/cart/add',
            type: 'post',
            data: $('#product input[type=\'text\'], #product input[type=\'hidden\'], #product input[type=\'number\'], #product input[type=\'radio\']:checked, #product input[type=\'checkbox\']:checked, #product select, #product textarea'),
            dataType: 'json',
            success: function(json){
                $('p.error').remove();
                $('.select').removeClass('error');

                if (json['error']) {
                    if (json['error']['option']) {
                        for (i in json['error']['option']) {
                            var element = $('#input-option' + i.replace('_', '-'));
                            element.addClass('error');
                            element.after('<p class="error">' + json['error']['option'][i] + '</p>');
                        }
                    }
                }

                if (json['success']) {
                    $('#cart-total').html(json['total']);
                    $('.cart-add-popup').addClass('active');
                    $('#cart').load('index.php?route=common/cart/info');
                    setTimeout(function() {
                        $('.scroll-text').mCustomScrollbar();
                    }, 300);
                    setTimeout(function() {
                        $('.cart-add-popup.active').removeClass('active');
                    }, 3000);
                }
            },
            error: function(xhr, ajaxOptions, thrownError){
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });

    $('.request-price__button').on('click', function(event){
        event.preventDefault();
        $('.popup-product').addClass('active');
    });
</script>

{% if video %}
    <div class="popup popup-video">
        <div class="popup__overlay"></div>
        <div class="popup__holder popup__holder--video">
            <div class="popup__close">
                <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="front/dist/images/sprite.svg#close"></use></svg>
            </div>
            <div class="popup__content">
                <div class="video-popup">
                    <iframe src="{{ video }}" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% if price < 1 %}
    <div class="popup popup-product">
        <div class="popup__overlay"></div>
        <div class="popup__holder">
            <div class="popup__close">
                <svg><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="front/dist/images/sprite.svg#close"></use></svg>
            </div>
            <div class="popup__content">
                <div class="popup__title">{{ text_product_title }}</div>
                <form class="popup__form" method="post" id="product-form">
                    <div class="form-block">
                        <input class="main-input" type="text" name="product_name">
                        <div class="form-label">{{ text_form_name }}</div>
                    </div>
                    <div class="form-block">
                        <input class="main-input" type="tel" name="product_phone">
                        <div class="form-label">{{ text_form_phone }}</div>
                    </div>
                    <input class="main-input" type="hidden" name="product_href" value="{{ product_href }}">
                    <button class="submit-button" type="submit" id="product-send">{{ text_product_title }}</button>
                </form>
            </div>
        </div>
    </div>
{% endif %}

