        <ol class="breadcrumb brand-breadcrumb">
            {% if manufacturer %}
            <li>
                <a href="{{ manufacturer_href }}"><span>{{ manufacturer }}</span></a>
            </li>
            {% endif %}
{% if collection %}
            <li>
                <a href="{{ collection_href }}"><span>{{ collection }}</span></a>
            </li>
            {% endif %}
        </ol>
