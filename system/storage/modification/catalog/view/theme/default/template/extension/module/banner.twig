{% if banners %}
  <div class="brands-section">
    <div class="brands-section__slider">

      {% for banner in banners %}
	{% if banner.link %}
        	<a href="{{ banner.link }}" {% if ee_tracking and ee_promotion %}onclick="ee_promotion.click('{{ banner.ee_banner_id }}', '{{ banner.ee_position }}')"{% endif %} class="brands-section__slide">
	{% else %}
		<a href="javascript:void(0);" class="brands-section__slide">
        {% endif %}
          <div class="brands-section__content" style="opacity: 0;">
            <div class="brands-section__title">{{ banner.title }}</div>
            <div class="brands-section__text">{{ banner.description }}
                <div class="main-section__button">
                    <span>
                      <svg viewBox="0 0 100 100" style="display: block; width: 100%;">
                        <path d="M 50,50 m 0,-49.5 a 49.5,49.5 0 1 1 0,99 a 49.5,49.5 0 1 1 0,-99" stroke="#fff" stroke-width="1" fill-opacity="0" ></path>
                      </svg>
                    </span>
                    {{ text_to_catalog }}
                </div>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
    {% for i,banner in banners %}
        {% if banner.image %}
            <style>
                .brands-section__slider .brands-section__slide[data-slick-index="{{ i }}"]{
                    background: url('{{ banner.image }}') no-repeat center;
                    -webkit-background-size: cover;
                    background-size: cover;
                }
                @media only screen and (max-width: 1364px){
                    .brands-section__slider .brands-section__slide[data-slick-index="{{ i }}"]{
                        background: url('{{ banner.image_lg }}') no-repeat center;
                        -webkit-background-size: cover;
                        background-size: cover;
                    }
                }
                @media only screen and (max-width: 991px){
                    .brands-section__slider .brands-section__slide[data-slick-index="{{ i }}"]{
                        background: url('{{ banner.image_md }}') no-repeat center;
                        -webkit-background-size: cover;
                        background-size: cover;
                    }
                }
                @media only screen and (max-width: 480px){
                    .brands-section__slider .brands-section__slide[data-slick-index="{{ i }}"]{
                        background: url('{{ banner.image_sm }}') no-repeat center;
                        -webkit-background-size: cover;
                        background-size: cover;
                    }
                }
            </style>
        {% endif %}
    {% endfor %}
{% endif %}